{
    "name": "card-creator",
    "version": "1.0.0",
    "description": "A Node.js program to create PNG game cards like Hearthstone",
    "main": "dist/index.js",
    "scripts": {
        "start": "node dist/index.js",
        "build": "tsc",
        "dev": "tsc --watch",
        "clean": "rm -rf dist",
        "type-check": "tsc --noEmit",
        "prebuild": "npm run clean",
        "install-deps": "npm install"
    },
    "dependencies": {
        "canvas": "^2.11.2",
        "fs": "^0.0.1-security",
        "path": "^0.12.7"
    },
    "keywords": [
        "game",
        "cards",
        "png",
        "image",
        "generation"
    ],
    "author": "Card Creator",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^22.15.27",
        "typescript": "^5.8.3"
    }
}